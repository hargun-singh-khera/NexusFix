<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="380dp"
                android:layout_height="350dp"
                android:layout_margin="10dp"
                android:src="@drawable/img22" />

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Your Experience"
                android:layout_below="@+id/imageView"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="6dp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHeading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading"
                android:text="Please take a moment to share your valuable feedback with us. Your opinion matters!"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:numStars="5"
                android:rating="1.5"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnSendRating"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_button"
                android:layout_below="@+id/ratingBar"
                android:textAllCaps="false"
                app:cornerRadius="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Send" />

<!--            <ProgressBar-->
